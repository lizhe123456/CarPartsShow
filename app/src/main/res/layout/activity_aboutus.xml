<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_48"
        android:background="@color/title_bg">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dm_48"
            android:layout_height="match_parent"
            android:src="@drawable/back_go"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:text="关于我们"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/ve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Copyright © 2011-2018 zhipeiku.All rights Reserved."
        android:textColor="@color/tv_999"
        android:textSize="@dimen/dm_12"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"/>
    <TextView
        android:id="@+id/ve1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="智配库 版权所有"
        android:textColor="@color/tv_999"
        android:textSize="@dimen/dm_12"
        android:layout_above="@+id/ve"
        android:layout_marginBottom="@dimen/dm_10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="智配库软件许可及服务及协议"
        android:textColor="@color/tv_000"
        android:textSize="@dimen/dm_12"
        android:layout_above="@+id/ve1"
        android:layout_marginBottom="@dimen/dm_22"/>
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/dm_100"
        android:layout_height="@dimen/dm_100"
        android:layout_below="@+id/rl_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dm_64"
        android:src="@mipmap/logo"/>
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="智配库 v(1.0.0)"
        android:textColor="@color/tv_000"
        android:textSize="@dimen/dm_15"
        android:layout_below="@+id/iv_logo"
        android:layout_marginBottom="@dimen/dm_22"
        android:layout_marginTop="@dimen/dm_20"/>
</RelativeLayout>