<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_48"
        android:background="@color/title_bg">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dm_48"
            android:layout_height="match_parent"
            android:src="@drawable/back_go"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:text="建议反馈"/>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/dm_48"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="提交"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dm_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_100"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_15"
        android:padding="@dimen/dm_5"
        android:background="@drawable/et_bg"
        >
        <EditText
            android:id="@+id/feed_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/tv_333"
            android:textColorHint="@color/tv_999"
            android:hint="请输入反馈，我们将为您不断改进"
            android:gravity="top|left"
            android:background="@null"
            android:maxLength="20" />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="(0/20)"
            android:textSize="@dimen/dm_12"
            android:textColor="@color/tv_999"/>
    </RelativeLayout>

</LinearLayout>