<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_48"
        android:background="@color/title_bg">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dm_48"
            android:layout_height="match_parent"
            android:src="@drawable/back_go"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:text="我的信用额度"/>
        <ImageView
            android:id="@+id/iv_ed"
            android:layout_width="@dimen/dm_48"
            android:layout_height="match_parent"
            android:src="@drawable/record"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dm_45"
        android:paddingTop="@dimen/dm_27"
        android:paddingBottom="@dimen/dm_15"
        android:background="@color/white"
        android:layout_below="@+id/rl_title">
        <TextView
            android:id="@+id/tv_ky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用额度"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/tv_000"/>
        <com.whmnrc.carpartsshow.view.NoMarginsTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9888"
            android:textSize="45dp"
            android:textColor="@color/red_login"
            android:layout_below="@+id/tv_ky"/>
        <TextView
            android:id="@+id/tv_zky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总额度"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/tv_000"
            android:layout_below="@+id/tv_price"
            />
        <com.whmnrc.carpartsshow.view.NoMarginsTextView
            android:id="@+id/tv_price_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textSize="25dp"
            android:textColor="@color/tv_000"
            android:layout_below="@+id/tv_zky"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/dm_18"
        android:layout_below="@+id/rl_ed">
        <TextView
            android:id="@+id/tv_hq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="去还钱"
            android:textColor="@color/red_login"
            android:layout_marginLeft="@dimen/dm_30"
            android:layout_marginRight="@dimen/dm_15"
            android:gravity="center"
            android:background="@drawable/login_red_bg3"
            android:paddingTop="@dimen/dm_10"
            android:paddingBottom="@dimen/dm_10"
            />
        <TextView
            android:id="@+id/tv_te"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_login"
            android:textColor="@color/white"
            android:text="提升额度"
            android:layout_marginRight="@dimen/dm_30"
            android:gravity="center"
            android:paddingTop="@dimen/dm_10"
            android:paddingBottom="@dimen/dm_10"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_wt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="常见问题"
        android:textColor="@color/tv_000"
        android:textSize="@dimen/dm_15"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dm_20"
        />
</RelativeLayout>