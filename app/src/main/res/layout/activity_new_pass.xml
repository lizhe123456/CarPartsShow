<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_marginTop="120dp"
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/iv_logo">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="36dp"
            android:paddingRight="40dp">
            <ImageView
                android:id="@+id/iv_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_lock"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_new_password"
                android:layout_toLeftOf="@id/iv_visual"
                android:inputType="textPassword"
                android:background="@null"
                android:paddingLeft="17dp"
                android:textSize="16sp"
                android:textColorHint="@color/tv_999"
                android:hint="输入新密码"
                android:lines="1"
                android:maxLength="18"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_visual"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/eye_normal"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/slide_line"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="36dp"
            android:paddingRight="40dp"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_lock"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_password"
                android:layout_toLeftOf="@id/tv_code"
                android:inputType="textPassword"
                android:background="@null"
                android:paddingLeft="17dp"
                android:textSize="16sp"
                android:textColorHint="@color/tv_999"
                android:hint="再次输入新密码"
                android:lines="1"
                android:maxLength="18"
                android:layout_centerVertical="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/slide_line"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="38dp"
        android:layout_marginLeft="38dp"
        android:padding="10dp"
        android:background="@drawable/shape_login"
        android:layout_below="@+id/ll_input"
        android:text="完成"
        android:textColor="@color/white"
        android:gravity="center"/>
</RelativeLayout>