<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_48"
        android:background="@color/title_bg">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dm_48"
            android:layout_height="match_parent"
            android:src="@drawable/back_go"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:text="用户资料"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_25"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省市"
            android:textColor="@color/tv_ccc"
            android:textSize="@dimen/dm_16"
            android:layout_marginLeft="@dimen/dm_38"
            android:paddingTop="@dimen/dm_10"
            android:paddingBottom="@dimen/dm_10"/>

        <TextView
            android:id="@+id/tv_add_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_16"
            android:paddingTop="@dimen/dm_10"
            android:paddingBottom="@dimen/dm_10"
            android:textColor="@color/tv_000"
            android:layout_marginLeft="@dimen/dm_44"
            />
        <TextView
            android:id="@+id/tv_add_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_16"
            android:paddingTop="@dimen/dm_10"
            android:paddingBottom="@dimen/dm_10"
            android:textColor="@color/tv_000"
            android:layout_marginLeft="@dimen/dm_44"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:layout_marginLeft="@dimen/dm_38"
        android:layout_marginRight="@dimen/dm_38"
        android:background="@color/slide_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_ccc"
            android:textSize="@dimen/dm_16"
            android:layout_marginLeft="@dimen/dm_38"
            android:paddingTop="@dimen/dm_10"
            android:paddingBottom="@dimen/dm_10"
            android:text="地区"/>
        <TextView
            android:id="@+id/tv_add_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_16"
            android:paddingTop="@dimen/dm_10"
            android:paddingBottom="@dimen/dm_10"
            android:textColor="@color/tv_000"
            android:layout_marginLeft="@dimen/dm_44"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:layout_marginLeft="@dimen/dm_38"
        android:layout_marginRight="@dimen/dm_38"
        android:background="@color/slide_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textColor="@color/tv_ccc"
            android:textSize="@dimen/dm_16"
            android:layout_marginLeft="@dimen/dm_38"
            android:paddingTop="@dimen/dm_10"
            android:paddingBottom="@dimen/dm_1"
            />


        <EditText
            android:id="@+id/et_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_16"
            android:paddingTop="@dimen/dm_10"
            android:paddingBottom="@dimen/dm_10"
            android:textColor="@color/tv_000"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:layout_marginRight="@dimen/dm_38"
            android:maxLength="10"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:layout_marginLeft="@dimen/dm_38"
        android:layout_marginRight="@dimen/dm_38"
        android:background="@color/slide_line"/>
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/dm_38"
        android:layout_marginLeft="@dimen/dm_38"
        android:padding="@dimen/dm_10"
        android:background="@drawable/shape_login"
        android:layout_below="@+id/ll_input"
        android:text="保存收货地址"
        android:textColor="@color/white"
        android:gravity="center"/>
</LinearLayout>