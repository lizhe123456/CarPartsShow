<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_48"
        android:background="@color/title_bg">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dm_48"
            android:layout_height="match_parent"
            android:src="@drawable/back_go"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:text="修改密码"/>
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="@dimen/dm_48"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="完成"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dm_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dm_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dm_10">
        <TextView
            android:id="@+id/old_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/tv_000"
            android:paddingBottom="@dimen/dm_15"
            android:paddingTop="@dimen/dm_15"/>
        <EditText
            android:id="@+id/et_old_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入旧密码"
            android:layout_toRightOf="@+id/old_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:inputType="textPassword"
            android:maxLength="18"
            android:layout_marginRight="@dimen/dm_15"
            android:textSize="@dimen/dm_15"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_0.5"
            android:background="@color/slide_line"
            android:layout_below="@+id/old_tv" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dm_15"
        android:background="@color/white">
        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/tv_000"
            android:paddingBottom="@dimen/dm_15"
            android:paddingTop="@dimen/dm_15"/>
        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入新密码"
            android:layout_toRightOf="@+id/pass"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:inputType="textPassword"
            android:maxLength="18"
            android:layout_marginRight="@dimen/dm_15"
            android:textColorHint="@color/tv_999"
            android:textSize="@dimen/dm_15"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_0.5"
            android:background="@color/slide_line"
            android:layout_below="@+id/pass" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dm_15"
        android:background="@color/white">
        <TextView
            android:id="@+id/pass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/tv_000"
            android:paddingBottom="@dimen/dm_15"
            android:paddingTop="@dimen/dm_15" />
        <EditText
            android:id="@+id/et_pass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:layout_toRightOf="@+id/pass2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:inputType="textPassword"
            android:textColorHint="@color/tv_999"
            android:textSize="@dimen/dm_15"
            android:maxLength="18"
            android:layout_marginRight="@dimen/dm_15"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_0.5"
            android:background="@color/slide_line"
            android:layout_below="@+id/pass2" />
    </RelativeLayout>


</LinearLayout>