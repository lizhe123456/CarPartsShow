<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_150">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dm_30"
            android:layout_marginBottom="@dimen/dm_10"
            android:layout_marginTop="@dimen/dm_10"
            android:layout_marginLeft="@dimen/dm_30"
            android:layout_height="@dimen/dm_150"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请认真核对识别结果和图片数据是否一致"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginLeft="@dimen/dm_10"
        android:background="@drawable/bg_fffacd"
        android:gravity="center"
        android:textSize="@dimen/dm_12"
        android:paddingTop="@dimen/dm_5"
        android:paddingBottom="@dimen/dm_5"
        android:textColor="@color/tv_999"
        android:layout_marginTop="@dimen/dm_5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_5">
        <EditText
            android:id="@+id/et_vin_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_bg_xian"
            android:paddingTop="@dimen/dm_10"
            android:paddingBottom="@dimen/dm_10"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_marginLeft="@dimen/dm_10"
            android:textColor="@color/tv_000"
            android:textSize="@dimen/dm_16"
            android:textScaleX="1.5"
            android:lines="1"
            android:inputType="text"
            android:textCursorDrawable="@null"
            android:paddingLeft="@dimen/dm_5"
            android:paddingRight="@dimen/dm_5"
            android:layout_marginTop="@dimen/dm_10"
            android:layout_toLeftOf="@+id/rl_copy"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/rl_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_10"
            android:paddingRight="@dimen/dm_5"
            android:paddingLeft="@dimen/dm_5"
            android:background="@color/red_login">
            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="@dimen/dm_13"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/dm_12"
                android:text="@string/tv_copy"
                android:padding="@dimen/dm_2"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_qu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/dm_38"
        android:layout_marginLeft="@dimen/dm_38"
        android:padding="@dimen/dm_10"
        android:background="@drawable/shape_login"
        android:layout_below="@+id/ll_input"
        android:text="核对无误，点击查询"
        android:textColor="@color/white"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_30"
        android:text="@string/vin_desc"
        android:textSize="@dimen/dm_12"
        android:textColor="@color/tv_999"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_10"
        android:lineSpacingExtra="5dp"
        />
</LinearLayout>