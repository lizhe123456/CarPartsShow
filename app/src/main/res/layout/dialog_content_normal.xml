<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginLeft="@dimen/dm_10">
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dm_15"
            android:paddingBottom="@dimen/dm_15"
            android:textSize="@dimen/dm_13"
            android:textColor="@color/tv_999"
            android:text="拨打客服热线"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_0.5"
            android:background="#AAAAAA"/>
        <TextView
            android:id="@+id/tv_phone_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dm_15"
            android:paddingBottom="@dimen/dm_15"
            android:textSize="@dimen/dm_20"
            android:textColor="@color/red_login"
            android:text="027-8888 8888"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_0.5"
            android:background="#AAAAAA"/>
        <TextView
            android:id="@+id/tv_phone_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dm_15"
            android:paddingBottom="@dimen/dm_15"
            android:textSize="@dimen/dm_20"
            android:textColor="@color/red_login"
            android:text="137 1111 2222"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_0.5"
            android:background="#AAAAAA"/>
        <TextView
            android:id="@+id/tv_phone_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dm_15"
            android:paddingBottom="@dimen/dm_15"
            android:textSize="@dimen/dm_20"
            android:textColor="@color/red_login"
            android:text="137 1111 2222"
            android:gravity="center"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginBottom="@dimen/dm_10">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dm_15"
            android:paddingBottom="@dimen/dm_15"
            android:textSize="@dimen/dm_20"
            android:textColor="@color/red_login"
            android:text="取消"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>