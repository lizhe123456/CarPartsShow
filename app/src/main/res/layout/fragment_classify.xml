<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_20"
        android:background="@color/title_bg"/>
    <RelativeLayout
        android:id="@+id/rl_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_48"
        android:background="@color/title_bg">
        <include
            android:id="@+id/search_bar"
            android:layout_toRightOf="@+id/iv_back"
            android:layout_toLeftOf="@+id/iv_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dm_10"
            android:layout_marginBottom="@dimen/dm_10"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginLeft="@dimen/dm_15"
            layout="@layout/et_search_layout"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_90"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_models"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="车型"
            android:gravity="center"
            android:paddingTop="@dimen/dm_13"
            android:paddingBottom="@dimen/dm_13"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/tv_999"
            android:drawableTop="@drawable/car_bran_selector"
            android:drawablePadding="@dimen/dm_5"
            />
        <TextView
            android:id="@+id/tv_classify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dm_13"
            android:paddingBottom="@dimen/dm_13"
            android:gravity="center"
            android:text="分类"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/tv_999"
            android:drawableTop="@drawable/classify_selector_1"
            android:drawablePadding="@dimen/dm_5"/>
        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dm_13"
            android:paddingBottom="@dimen/dm_13"
            android:gravity="center"
            android:text="品牌"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/tv_999"
            android:drawableTop="@drawable/brand_selector"
            android:drawablePadding="@dimen/dm_5"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:background="@color/white">
        <View
            android:id="@+id/v_models"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dm_1"
            android:background="@color/red_login" />
        <View
            android:id="@+id/v_classify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dm_1"
            android:background="@color/red_login"
            android:visibility="invisible"/>
        <View
            android:id="@+id/v_brand"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dm_1"
            android:background="@color/red_login"
            android:visibility="invisible"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:id="@+id/divider"
        android:layout_height="0.5dp"
        android:background="@color/slide_line"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_60"/>
</LinearLayout>