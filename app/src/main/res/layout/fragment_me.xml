<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:id="@+id/stu_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_20"
        android:background="@color/title_bg"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_48"
        android:background="@color/title_bg"
        android:gravity="center">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/dm_75">
            <TextView
                android:id="@+id/tv_gongsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:drawableRight="@drawable/address_more"
                android:textSize="16sp"
                android:textColor="@color/tv_333"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#f5f5f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4.7">
                <LinearLayout
                    android:id="@+id/ll_money"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="@dimen/dm_15"
                    android:paddingBottom="15dp">
                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tv_000"
                        android:textSize="@dimen/dm_20"
                        android:text="0"/>
                    <TextView
                        android:id="@+id/text_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/tv_999"
                        android:text="可信信用额度"/>
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#DDDDDD"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
                <LinearLayout
                    android:id="@+id/ll_collection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <TextView
                        android:id="@+id/collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tv_000"
                        android:textSize="20sp"
                        android:text="0"/>
                    <TextView
                        android:id="@+id/text_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/tv_999"
                        android:text="收藏"/>
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#DDDDDD"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
                <LinearLayout
                    android:id="@+id/ll_coupon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <TextView
                        android:id="@+id/coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tv_000"
                        android:textSize="20sp"
                        android:text="0"/>
                    <TextView
                        android:id="@+id/text_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/tv_999"
                        android:text="优惠券"/>

                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#DDDDDD"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
                <LinearLayout
                    android:id="@+id/ll_integral"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <TextView
                        android:id="@+id/integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tv_000"
                        android:textSize="20sp"
                        android:text="0"/>
                    <TextView
                        android:id="@+id/text_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/tv_999"
                        android:text="积分"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_10"
                android:background="@color/bg_f5f5f5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textSize="15dp"
                    android:textColor="@color/tv_000"
                    android:paddingLeft="@dimen/dm_15"/>
                <TextView
                    android:id="@+id/all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部订单"
                    android:drawableRight="@drawable/address_more"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/dm_12"
                    android:textColor="@color/tv_888"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="@dimen/dm_15"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/slide_line"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>
            <com.whmnrc.carpartsshow.view.SlideGridView
                android:id="@+id/grid_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="5"
                android:paddingLeft="@dimen/dm_15"
                android:paddingRight="@dimen/dm_15"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_10"
                android:background="@color/bg_f5f5f5"/>
            <com.whmnrc.carpartsshow.view.SlideListView
                android:id="@+id/lv_item_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"/>
            <TextView
                android:id="@+id/tv_exit_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/dm_38"
                android:layout_marginLeft="@dimen/dm_38"
                android:padding="@dimen/dm_10"
                android:background="@drawable/shape_login"
                android:layout_below="@+id/ll_input"
                android:text="@string/exit_login"
                android:textColor="@color/white"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_65"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
