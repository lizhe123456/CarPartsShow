<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/ll_receipt_address"
    android:paddingBottom="@dimen/dm_10">
    <TextView
        android:id="@+id/receipt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/more"
        android:textSize="@dimen/dm_13"
        android:text="收货攻速"
        android:layout_marginLeft="@dimen/dm_20"
        android:textColor="@color/tv_000"
        android:padding="@dimen/dm_10"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:background="@color/slide_line"/>
    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15"
        android:paddingBottom="@dimen/dm_10"
        android:paddingTop="@dimen/dm_10">
        <ImageView
            android:id="@+id/iv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/address"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_000"
            android:textSize="@dimen/dm_16"
            android:text="联系人：张小胖"
            android:layout_toRightOf="@+id/iv_address"
            android:layout_marginLeft="@dimen/dm_15"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_000"
            android:textSize="@dimen/dm_16"
            android:text="138 8888 9999"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dm_30"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:textSize="@dimen/dm_14"
            android:text="收货地址：湖北省武汉市硚口区解放大道大智路 数码港1710室"
            android:layout_below="@+id/tv_contacts"
            android:layout_toRightOf="@+id/iv_address"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_8"
            android:layout_marginRight="@dimen/dm_15"/>
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/address_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_10"
        android:background="@color/bg_f5f5f5"/>
</LinearLayout>