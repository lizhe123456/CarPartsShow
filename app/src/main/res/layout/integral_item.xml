<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dm_15"
    android:paddingLeft="@dimen/dm_15">
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dm_15"
        android:textColor="@color/tv_000"
        android:text="123513"
        android:maxLines="2"
        android:lines="2"
        android:layout_toLeftOf="@+id/tv_integral"
        android:layout_marginRight="@dimen/dm_10"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dm_12"
        android:textColor="@color/tv_999"
        android:text="254132513"
        android:layout_below="@+id/tv_desc"
        android:layout_marginTop="@dimen/dm_10"/>
    <TextView
        android:id="@+id/tv_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="@color/tv_000"
        android:textSize="@dimen/dm_18"
        android:text="-191"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dm_15"/>
    <View
        android:id="@+id/v_xian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:background="@color/bg_f5f5f5"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="@dimen/dm_15"/>
</RelativeLayout>