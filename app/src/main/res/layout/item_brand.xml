<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:id="@+id/tv_catagory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A"
        android:textColor="@color/tv_2424"
        android:textSize="@dimen/dm_15"
        android:paddingTop="@dimen/dm_8"
        android:paddingBottom="@dimen/dm_8"
        android:paddingLeft="@dimen/dm_15"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_layout"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/dm_40"
            android:layout_height="@dimen/dm_40"
            android:layout_marginTop="@dimen/dm_6"
            android:layout_marginBottom="@dimen/dm_6"
            android:layout_marginLeft="@dimen/dm_15"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_2424"
            android:textSize="@dimen/dm_15"
            android:text="奥胜"
            android:layout_toRightOf="@+id/iv_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_10"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dm_15"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_0.5"
            android:background="@color/slide_line"
            android:layout_below="@+id/iv_img"
            android:layout_marginLeft="@dimen/dm_15"/>
    </RelativeLayout>

</LinearLayout>
