<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_group"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/item_img"
        android:layout_width="@dimen/dm_40"
        android:layout_height="@dimen/dm_40"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_8"
        android:layout_marginBottom="@dimen/dm_8"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="过滤器"
        android:textColor="@color/tv_000"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_img"
        android:layout_marginLeft="@dimen/dm_10"/>
    <ImageView
        android:id="@+id/item_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dm_15"/>
</RelativeLayout>