<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="@dimen/dm_100"
        android:layout_height="@dimen/dm_100"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_goods_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大众老新捷达雨刮器 桑塔纳POLO宝来朗 逸有无骨雨刷汽车原装配件"
        android:textSize="@dimen/dm_14"
        android:layout_marginRight="@dimen/dm_15"
        android:textColor="@color/tv_000"
        android:layout_marginTop="@dimen/dm_10"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_toRightOf="@+id/iv_goods"/>
    <TextView
        android:id="@+id/tv_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dm_12"
        android:textColor="@color/tv_FA0F41"
        android:text="¥ "
        android:layout_toRightOf="@+id/iv_goods"
        android:layout_alignBottom="@+id/iv_goods"
        android:layout_marginLeft="@dimen/dm_10"
        android:gravity="bottom"/>
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@color/tv_FA0F41"
        android:textSize="@dimen/dm_17"
        android:text="5888.00"
        android:layout_alignBottom="@+id/tv_rmb"
        android:layout_toRightOf="@+id/tv_rmb"/>
        <TextView
            android:id="@+id/tv_join_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/dm_15"
            android:layout_alignBottom="@+id/tv_price"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:text="加入购物车"
            android:paddingLeft="@dimen/dm_8"
            android:paddingRight="@dimen/dm_8"
            android:paddingTop="@dimen/dm_3"
            android:paddingBottom="@dimen/dm_3"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_login"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:background="@color/slide_line"
        android:layout_toRightOf="@+id/iv_goods"
        android:layout_below="@+id/iv_goods"
        android:layout_marginTop="10dp"/>
</RelativeLayout>