<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dm_12"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dm_10">
    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/round_btn_normal"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_10"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/dm_15"
        android:paddingTop="@dimen/dm_15"/>
    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_below="@+id/xian"
        android:layout_marginTop="@dimen/dm_12"
        android:layout_toRightOf="@+id/iv_select"/>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大众老新捷达雨刮器 桑塔纳POLO宝来 逸有无骨雨刷汽车原装配件"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/dm_14"
        android:textColor="@color/tv_000"
        android:layout_toRightOf="@+id/goods_img"
        android:layout_alignTop="@+id/goods_img"
        android:layout_marginRight="@dimen/dm_20"
        android:layout_marginLeft="@dimen/dm_8"/>
    <LinearLayout
        android:layout_width="@dimen/dm_150"
        android:layout_height="@dimen/dm_30"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/goods_img"
        android:layout_below="@+id/tv_goods_name"
        android:layout_marginLeft="@dimen/dm_8"
        android:background="@drawable/slide_line_bg"
        android:layout_marginTop="@dimen/dm_4">
        <TextView
            android:id="@+id/tv_reduce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/dm_18"
            android:textColor="@color/tv_000"
            android:layout_gravity="center"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/slide_line"/>
        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="15"
            android:layout_weight="2"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/tv_000"
            android:layout_gravity="center"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/slide_line"/>
        <TextView
            android:id="@+id/tv_plus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="@dimen/dm_18"
            android:textColor="@color/tv_000"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/goods_img"
        android:layout_alignBottom="@+id/goods_img"
        android:layout_marginLeft="@dimen/dm_8"
        android:textColor="@color/red_login"
        android:textSize="@dimen/dm_16"
        android:layout_marginTop="@dimen/dm_5"
        android:text="¥19.00"/>
</RelativeLayout>