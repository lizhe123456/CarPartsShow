<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dm_15"
    android:paddingBottom="@dimen/dm_10">
    <View
        android:id="@+id/tv_xian"
        android:layout_width="@dimen/dm_0.5"
        android:layout_height="@dimen/dm_45"
        android:background="@color/bg_f5f5f5" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_000"
        android:text="待收货"
        android:layout_below="@+id/frameLayout1"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/dm_12"
        android:layout_marginTop="-10dp"
        />
    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm_12"
            android:src="@drawable/wait_collect_goods"
            android:padding="6dp" />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="@dimen/dm_13"
            android:layout_height="@dimen/dm_13"
            android:background="@drawable/small_scale"
            android:text="8"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dm_9"
            android:layout_gravity="top|right"/>
    </FrameLayout>
</RelativeLayout>