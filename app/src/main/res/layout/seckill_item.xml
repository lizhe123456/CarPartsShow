<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_goods_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dm_3"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dm_3">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dm_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="防爆轮胎 米其林545646546"
            android:textColor="@color/tv_000"
            android:textSize="@dimen/dm_10"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/dm_80"
            android:layout_height="@dimen/dm_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dm_5"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dm_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="¥"
                android:textColor="@color/red_login"
                android:textSize="@dimen/dm_10" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_3"
                android:layout_toRightOf="@+id/rmb"
                android:text="200"
                android:textColor="@color/red_login"
                android:textSize="@dimen/dm_18" />

            <TextView
                android:id="@+id/tv_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_price"
                android:layout_marginBottom="@dimen/dm_10"
                android:layout_marginLeft="@dimen/dm_10"
                android:layout_toRightOf="@+id/tv_price"
                android:text="¥200"
                android:textColor="@color/tv_999"
                android:textSize="@dimen/dm_12" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>