<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dm_80"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dm_10">
    <TextView
        android:id="@+id/tv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dm_12"
        android:textColor="@color/tv_000"
        android:text="关键字"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:background="@color/bg_f5f5f5"
        android:layout_marginTop="@dimen/dm_8" />
    <TextView
        android:id="@+id/tv_vin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_000"
        android:textSize="@dimen/dm_12"
        android:gravity="center"
        android:text="VIN"
        android:layout_marginTop="@dimen/dm_8"/>
</LinearLayout>